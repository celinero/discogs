<h1> Update <%=@band.name%></h1>

<% if @band.errors.any? %>
<p>There's something wrong</p>
<% @band.errors.full_messages.each do |message| %>
  <ul>
    <li><%=message%></li>
  </ul>
  <%end%>
<%end%>

<%=form_with model: @band, local: true do |form| %>
<div class="field">
  <%= form.label :name %>
  <%= form.text_field :name %>
</div>

<div class="field">
  <%= form.label :genre %>
  <%= form.select :genre_id, @genres.map {|g| [g.name, g.id]} %>
</div>

<div class="field">
  <%= form.label :description %>
  <%= form.text_area :description %>
</div>

<div class="field">
  <%= form.submit %>
</div>
<%end %>